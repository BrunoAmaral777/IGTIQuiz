<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/montain"
    tools:context=".MainActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_180_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/pergunta_cardView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Será que você consegue \n adivinhar?"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divisor"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/holo_orange_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txvTitle" />

            <TextView
                android:id="@+id/txvPergunta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pergunta a se fazer"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divisor" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/txvVerdadeiro"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="Verdadeiro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txvFalso"
        app:layout_constraintStart_toStartOf="@+id/pergunta_cardView"
        app:layout_constraintTop_toBottomOf="@+id/pergunta_cardView" />

    <Button
        android:id="@+id/txvFalso"
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:text="Falso"
        app:layout_constraintBottom_toBottomOf="@+id/txvVerdadeiro"
        app:layout_constraintEnd_toEndOf="@+id/pergunta_cardView"
        app:layout_constraintStart_toEndOf="@+id/txvVerdadeiro"
        app:layout_constraintTop_toTopOf="@+id/txvVerdadeiro" />
</androidx.constraintlayout.widget.ConstraintLayout>