<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/montain"
    tools:context=".MainActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_180_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/pergunta_cardView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#D8D8D8"
        app:cardCornerRadius="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txvPergunta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Pergunta a se fazer  Pergunta"
                android:textAlignment="center"
                android:fontFamily="@font/ubuntu"
                android:textColor="#222"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnVerdadeiro"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/button_style"
        android:text="Verdadeiro"
        android:fontFamily="@font/ubuntu"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pergunta_cardView"
        app:layout_constraintStart_toStartOf="@+id/pergunta_cardView"
        app:layout_constraintTop_toBottomOf="@+id/pergunta_cardView"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/btnFalso"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style"
        android:text="Falso"
        android:textSize="18dp"
        android:fontFamily="@font/ubuntu"
        app:layout_constraintEnd_toEndOf="@+id/btnVerdadeiro"
        app:layout_constraintStart_toStartOf="@+id/btnVerdadeiro"
        app:layout_constraintTop_toBottomOf="@+id/btnVerdadeiro" />


</androidx.constraintlayout.widget.ConstraintLayout>